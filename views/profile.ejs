         <!-- for the post part -->
          <div class="h-full w-full grid grid-cols-3 border border-gray-300">
            <% if (totalposturl.length<=0) { %>
                <div class="border border-gray-200 w-full font-bold text-xl col-span-full text-center">
                    No post to show
                </div>
            <% } else { %>
                <% totalposturl.forEach(element => { %>
                    <div class="border aspect-square border-gray-200">
                        <img class="object-cover h-full w-full overflow-hidden" src="<%=element.postURL%>" alt="img">
                    </div>
                <% }) %>
            <% } %>
            
          </div>
    </div>

    <!-- for the edit part -->
