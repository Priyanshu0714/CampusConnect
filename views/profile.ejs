              </div>
        </div>
        <div class="h-auto w-full">
            <div class="font-bold"><%=name%></div>
            <div class="text-sm"><%=username%></div>
        </div>
        <div class="h-auto w-full text-sm"><%=bio%></div>
        <div class="h-20 flex items-center justify-center gap-2 flex-row w-full mt-4">
            <!-- post number -->
             <div class="flex items-center justify-center flex-col flex-1 border-r-2 border-gray-300">
                <div class="font-bold text-xl"><%=post%></div>
                <div class="text-[13px]">Posts</div>
             </div>
             <!-- for followers -->
             <div class=" flex items-center justify-center flex-col flex-1 border-r-2 border-gray-300">
                <div class="font-bold text-xl"><%=followers %></div>
                <div class="text-[13px]">Followers</div>
             </div>
             <!-- for following -->
             <div class=" flex items-center justify-center flex-col flex-1 border-r-2 border-gray-300">
                <div class="font-bold text-xl"><%=following%></div>
                <div class="text-[13px]">Followings</div>
             </div>
             <!-- for likes -->
             <div class=" flex items-center justify-center flex-col flex-1">
                <div class="font-bold text-xl"><%=likes %></div>
                <div class="text-[13px]">Likes</div>
             </div>
             
        </div>
    </div>
    <!-- FOR THE BOTTOM PART -->
